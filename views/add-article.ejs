<h1>Add New Article</h1>
<form action="/articles" method="POST" class="form" enctype="multipart/form-data"> <!-- Tambahkan enctype -->
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea id="content" name="content" class="form-control" rows="5" required></textarea>
    </div>
    <div class="form-group">
        <label for="image_url">Upload Image:</label>
        <input type="file" id="image_url" name="image_url" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Add Article</button>
    <a href="/articles" class="btn btn-secondary">Back to Articles</a>
</form>
