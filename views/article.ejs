<div class="container mt-5">
    <h1 class="display-4"><%= article.title %></h1>
    <% if (article.image_url) { %>
        <img src="/uploads/<%= article.image_url %>" alt="<%= article.title %>" class="" width="600" height="600"> 
    <% } %>
    <p class="text-muted"><small>Published on: <%= article.created_at ? new Date(article.created_at).toLocaleDateString() : 'Unknown' %></small></p>
    <div class="mt-4 mb-4">
        <p class="lead"><%= article.content %></p>
    </div>

    <a href="/articles" class="btn btn-primary">Back to Articles</a>
    
    <!-- Form untuk menghapus artikel -->
    <form action="/articles/delete/<%= article.id %>" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete Article</button>
    </form>
</div>
