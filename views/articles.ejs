<div class="container mt-5">
    <h1 class="display-4">Articles List</h1>
    <a href="/add-article" class="btn btn-primary mb-3">Add New Article</a>
    <% articles.forEach(article => { %>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <p class="card-text"><%= article.content.substring(0, 100) %>...</p>
                <a href="/articles/<%= article.id %>" class="btn btn-primary">View</a>

                <!-- Form untuk menghapus artikel dari daftar artikel -->
                <form action="/articles/delete/<%= article.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
                </form>
            </div>
        </div>
    <% }); %>
</div>
