<h1>Edit Article</h1>
<form action="/articles/edit/<%= article.id %>" method="POST" class="form" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" value="<%= article.title %>" required>
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea id="content" name="content" class="form-control" rows="5" required><%= article.content %></textarea>
    </div>
    <div class="form-group">
        <label for="image_url">Upload Image:</label>
        <input type="file" id="image_url" name="image_url" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Update Article</button>
    <a href="/articles" class="btn btn-secondary">Back to Articles</a>
</form>
